{
  "version": 2,
  "builds": [
  { "src": "api/**/*.js", "use": "@vercel/node", "config": { "includeFiles": ["backend/**", "backend/data/**", "data/**"] } },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}
